<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_container"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="16dp">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/filter_button"
        android:background="@drawable/search_background"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/material_margin_small"
        android:imeOptions="actionDone"
        android:inputType="textShortMessage"
        android:labelFor="@+id/search"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/material_margin_small"
        android:singleLine="true"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        tools:hint="@string/search_hint" />

    <ImageView
        android:id="@+id/filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/search_background"
        android:contentDescription="@string/close"
        android:src="@drawable/ic_filter"
        tools:visibility="visible" />

</RelativeLayout>